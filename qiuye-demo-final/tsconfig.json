{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@packages/*": [
        "./packages/*"
      ],
      "@qiu/*": [
        "./packages/*"
      ],
      "packages/*": ["./packages/*"]
    },
  },
  "exclude": ["node_modules", "dist", "lib", "es"],
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "src/*.d.ts",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
